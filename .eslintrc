{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "env": {
    "jest": true,
    "node": true
  },
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module"
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-restricted-globals": "off",
        "import/no-duplicates": "off"
      }
    }
  ]
}
