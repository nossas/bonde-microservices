{
  "name": "listener-redes",
  "version": "1.0.0",
  "description": "Listener Redes",
  "main": "src/main.ts",
  "engines": {
    "node": ">= 12.13 <13"
  },
  "devDependencies": {
    "@types/jest": "~25.1.0",
    "@types/node": "~12.12.27",
    "@types/throng": "^4.0.2",
    "@types/ws": "^7.2.9",
    "jest": "~24.9.0",
    "rimraf": "~3.0.2",
    "ts-jest": "~24.1.0"
  },
  "scripts": {
