{
  "root": true,
  "overrides": [
    {
      "files": [
        "**/*.ts"
      ],
      "env": {
        "jest": true,
        "node": true
      },
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "plugin:@typescript-eslint/recommended"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json",
          "packages/cli-mautic/tsconfig.json",
          "packages/cli-zendesk/tsconfig.json",
          "packages/webhooks-auth/tsconfig.json",
          "packages/webhooks-registry/tsconfig.json",
          "packages/webhooks-solidarity-count/tsconfig.json",
          "packages/webhooks-zendesk/tsconfig.json"
        ]
      },
      "rules": {
        "@typescript-eslint/indent": [
          "error",
          2
        ],
        "@typescript-eslint/explicit-member-accessibility": [
          "off"
        ],
        "@typescript-eslint/member-delimiter-style": [
          "error",
          {
            "multiline": {
              "delimiter": "none"
            }
          }
        ],
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/camelcase": "off",
        "@typescript-eslint/no-non-null-assertion": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": ["error", {
          "argsIgnorePattern": "^_"
        }]
      }
    }
  ]
}
